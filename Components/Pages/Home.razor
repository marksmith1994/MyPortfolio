@page "/"
@using MyPortfolio.Components.Layout

<PageTitle>Home - My Portfolio</PageTitle>

<div class="hero-section gradient-bg d-flex align-items-center min-vh-70 py-5 mb-5">
    <div class="container">
        <div class="row align-items-center flex-column-reverse flex-lg-row">
            <div class="col-lg-6 text-center text-lg-start">
                <h1 class="display-3 fw-bold mb-3 animate-fadein">Welcome to My Portfolio</h1>
                <p class="lead mb-4 animate-fadein animate-delay-1">I'm a passionate developer creating modern web applications with cutting-edge technologies.</p>
                <div class="d-flex gap-3 justify-content-center justify-content-lg-start animate-fadein animate-delay-2">
                    <a href="/projects" class="btn btn-primary btn-lg shadow-sm">View My Work</a>
                    <a href="/contact" class="btn btn-outline-primary btn-lg shadow-sm">Get in Touch</a>
                </div>
            </div>
            <div class="col-lg-6 mb-4 mb-lg-0 text-center animate-fadein animate-delay-3">
                <div class="hero-image">
                    <img src="images/profile.jpeg" alt="Developer at work" class="profile-img mx-auto" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 card-hover shadow-sm animate-fadein animate-delay-4">
                <div class="card-body text-center">
                    <i class="fas fa-code fa-3x mb-3 text-primary"></i>
                    <h3 class="card-title">Projects</h3>
                    <p class="card-text">Explore my latest projects and see how I solve real-world problems with code.</p>
                    <a href="/projects" class="btn btn-primary">View Projects</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 card-hover shadow-sm animate-fadein animate-delay-5">
                <div class="card-body text-center">
                    <i class="fas fa-cogs fa-3x mb-3 text-primary"></i>
                    <h3 class="card-title">Skills</h3>
                    <p class="card-text">Discover the technologies and tools I use to build modern web applications.</p>
                    <a href="/skills" class="btn btn-outline-primary">View Skills</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 card-hover shadow-sm animate-fadein animate-delay-6">
                <div class="card-body text-center">
                    <i class="fas fa-rocket fa-3x mb-3 text-primary"></i>
                    <h3 class="card-title">SpaceX Launches</h3>
                    <p class="card-text">Check out the latest and upcoming SpaceX launches, with live data and filters.</p>
                    <a href="/spacex" class="btn btn-outline-primary">View Launches</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="divider my-5"></div>


<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap" rel="stylesheet">
<link href="css/home.css" rel="stylesheet">
