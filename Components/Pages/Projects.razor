    <!-- GitHub Repositories Section -->
    <section>
        <h2 class="text-center mb-4">GitHub Repositories</h2>
        
        @if (isLoading)
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @for (int i = 0; i < 6; i++)
                {
                    <div class="col">
                        <LoadingSkeleton ShowImage="false" />
                    </div>
                }
            </div>
        }
        else if (errorMessage != null)
        {
            <ErrorDisplay 
                Title="Failed to Load Projects" 
                Message="@errorMessage"
                ShowRetry="true"
                IsRetrying="@isRetrying"
                OnRetry="LoadRepositoriesAsync" />
        }
        else if (repositories == null || !repositories.Any())
        {
            <div class="text-center py-5">
                <div class="empty-state">
                    <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No repositories found</h4>
                    <p class="text-muted">Check back later for new projects!</p>
                </div>
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 fade-in">
                @foreach (var repo in repositories)
                {
                    <div class="col">
                        <div class="card h-100 project-card">
                            <div class="card-body d-flex flex-column">
