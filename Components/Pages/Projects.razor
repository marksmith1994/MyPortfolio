@page "/projects"
@using MyPortfolio.Services
@using MyPortfolio.Models
@using MyPortfolio.Components.Shared
@inject GitHubService GitHubService

<PageTitle>Projects - Mark Smith</PageTitle>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1 class="text-center mb-4">My Projects</h1>
            <p class="lead text-center text-muted mb-5">
                Here are some of my recent projects and contributions. Each project represents a unique challenge and learning opportunity.
            </p>
        </div>
    </div>

    <!-- Side Projects Section -->
    <section class="mb-5">
        <h2 class="text-center mb-4">Side Projects</h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            <div class="col">
                <a href="/nasa-apod" class="card h-100 project-card text-decoration-none text-reset">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-meteor me-2 text-warning"></i>NASA APOD
                        </h5>
                        <p class="card-text">
                            View the Astronomy Picture of the Day, with details and explanations, powered by NASA's public API.
                        </p>
                        <div class="d-flex justify-content-end">
                            <span class="btn btn-outline-primary btn-sm disabled">Internal</span>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col">
                <a href="/spacex" class="card h-100 project-card text-decoration-none text-reset">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-rocket me-2 text-danger"></i>SpaceX Launches
                        </h5>
                        <p class="card-text">
                            Explore recent and upcoming SpaceX launches, with mission details and rocket info, using the SpaceX API.
                        </p>
                        <div class="d-flex justify-content-end">
                            <span class="btn btn-outline-primary btn-sm disabled">Internal</span>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col">
                <a href="/weather" class="card h-100 project-card text-decoration-none text-reset">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-cloud-sun-rain me-2 text-info"></i>Weather Dashboard
                        </h5>
                        <p class="card-text">
                            Check the weather for multiple cities, with daily caching and a modern, responsive UI.
                        </p>
                        <div class="d-flex justify-content-end">
                            <span class="btn btn-outline-primary btn-sm disabled">Internal</span>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col">
                <a href="/strava" class="card h-100 project-card text-decoration-none text-reset">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-running me-2 text-success"></i>Strava Analytics
                        </h5>
                        <p class="card-text">
                            Analyse your Strava activities with interactive charts, heatmaps, and performance metrics.
                        </p>
                        <div class="d-flex justify-content-end">
                            <span class="btn btn-outline-primary btn-sm disabled">Internal</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </section>

    <!-- GitHub Repositories Section -->
    <section>
        <h2 class="text-center mb-4">GitHub Repositories</h2>
        
        @if (isLoading)
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @for (int i = 0; i < 6; i++)
                {
                    <div class="col">
                        <SkeletonCard ShowImage="false" />
                    </div>
                }
            </div>
        }
        else if (errorMessage != null)
        {
            <ErrorDisplay 
                Title="Failed to Load Projects" 
                Message="@errorMessage"
                ShowRetry="true"
                IsRetrying="@isRetrying"
                OnRetry="LoadRepositoriesAsync" />
        }
        else if (repositories == null || !repositories.Any())
        {
            <div class="text-center py-5">
                <div class="empty-state">
                    <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No repositories found</h4>
                    <p class="text-muted">Check back later for new projects!</p>
                </div>
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 fade-in">
                @foreach (var repo in repositories)
                {
                    <div class="col">
                        <a href="@repo.HtmlUrl" target="_blank" class="card h-100 text-decoration-none text-reset project-card" style="display:block;">
                            <div class="card-body">
                                <h5 class="card-title mb-2">@repo.Name</h5>
                                <p class="card-text">@repo.Description</p>
                                <div class="mb-3">
                                    @if (!string.IsNullOrEmpty(repo.Language))
                                    {
                                        <span class="badge bg-secondary me-1">@repo.Language</span>
                                    }
                                    @if (repo.Topics.Any())
                                    {
                                        @foreach (var topic in repo.Topics.Take(3))
                                        {
                                            <span class="badge bg-info me-1">@topic</span>
                                        }
                                    }
                                </div>
                                <div class="mb-3">
                                    <span class="badge bg-primary me-2">
                                        <i class="fas fa-star"></i> @repo.StargazersCount
                                    </span>
                                    <span class="badge bg-info me-2">
                                        <i class="fas fa-code-branch"></i> @repo.ForksCount
                                    </span>
                                    @if (repo.License != null)
                                    {
                                        <span class="badge bg-light text-dark me-2">
                                            <i class="fas fa-balance-scale"></i> @repo.License.Name
                                        </span>
                                    }
                                </div>
                                <div class="text-muted small">
                                    <i class="fas fa-clock me-1"></i>
                                    Updated @GetTimeAgo(repo.UpdatedAt)
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </section>
</div>

@code {
    private List<GitHubRepository>? repositories;
    private bool isLoading = true;
    private bool isRetrying = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadRepositoriesAsync();
    }

    private async Task LoadRepositoriesAsync()
    {
        if (isRetrying)
        {
            isRetrying = true;
        }
        else
        {
            isLoading = true;
        }
        
        errorMessage = null;
        
        try
        {
            repositories = await GitHubService.GetRepositoriesAsync();
        }
        catch (Exception)
        {
            errorMessage = "Failed to load projects. Please check your connection and try again.";
        }
        finally
        {
            isLoading = false;
            isRetrying = false;
        }
    }

    private string GetTimeAgo(DateTime dateTime)
    {
        var timeSpan = DateTime.Now - dateTime;

        if (timeSpan.TotalDays > 365)
        {
            return $"{(int)(timeSpan.TotalDays / 365)} years ago";
        }
        if (timeSpan.TotalDays > 30)
        {
            return $"{(int)(timeSpan.TotalDays / 30)} months ago";
        }
        if (timeSpan.TotalDays > 1)
        {
            return $"{(int)timeSpan.TotalDays} days ago";
        }
        if (timeSpan.TotalHours > 1)
        {
            return $"{(int)timeSpan.TotalHours} hours ago";
        }
        if (timeSpan.TotalMinutes > 1)
        {
            return $"{(int)timeSpan.TotalMinutes} minutes ago";
        }
        return "just now";
    }
}
